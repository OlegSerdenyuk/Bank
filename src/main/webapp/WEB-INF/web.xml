<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>AddMoney</servlet-name>
        <servlet-class>servlets.AddMoneyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddMoney</servlet-name>
        <url-pattern>/addMoneyToCard</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SendMoneyServlet</servlet-name>
        <servlet-class>servlets.SendMoneyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SendMoneyServlet</servlet-name>
        <url-pattern>/sendMoneyToAnotherCard</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>UserAccount</servlet-name>
        <servlet-class>servlets.UserAccount</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserAccount</servlet-name>
        <url-pattern>/addUserAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConvertMoneyServlet</servlet-name>
        <servlet-class>servlets.ConvertMoneyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ConvertMoneyServlet</servlet-name>
        <url-pattern>/convertMoney</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SumAllMoneyServlet</servlet-name>
        <servlet-class>servlets.SumAllMoneyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SumAllMoneyServlet</servlet-name>
        <url-pattern>/sumAllMoney</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>informationAboutUserServlet</servlet-name>
        <servlet-class>servlets.InformationAboutUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>informationAboutUserServlet</servlet-name>
        <url-pattern>/informationAboutUserServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>usersTransaction</servlet-name>
        <servlet-class>servlets.UsersTransactionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>usersTransaction</servlet-name>
        <url-pattern>/transaction</url-pattern>
    </servlet-mapping>



</web-app>